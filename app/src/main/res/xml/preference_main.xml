<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="User Control">

       <Preference
           android:key="Edit_profile"
           android:title="Edit Profle"
           android:summary="Set the content of your profile. Remember to use real information."/>

        <Preference
            android:key="Set_language"
            android:title="Language"
            android:summary="Set to English (US)"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="General">

        <CheckBoxPreference
            android:title="Notify Trusted Contacts"
            android:summary="Notify persons you trust about updates of yourself when you are in danger"
            android:checked="false"/>
        <CheckBoxPreference
            android:title="Notify by Facebook"
            android:summary="Post in facebook group about your situation when you are in danger"
            android:checked="false"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>